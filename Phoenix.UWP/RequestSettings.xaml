<ContentDialog
    x:Class="Phoenix.UWP.RequestSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Phoenix.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Request Settings"
    PrimaryButtonText="Clone"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <StackPanel>
        <CheckBox>
            <StackPanel>
                <TextBlock>Accept requests</TextBlock>
                <TextBlock Style="{ThemeResource CaptionTextBlockStyle}">Guests will be able to request songs</TextBlock>
            </StackPanel>
        </CheckBox>
        <CheckBox>
            <StackPanel>
                <TextBlock>Moderate requests</TextBlock>
                <TextBlock Style="{ThemeResource CaptionTextBlockStyle}">Guest's requests will be held for approval</TextBlock>
            </StackPanel>
        </CheckBox>
    </StackPanel>
</ContentDialog>
